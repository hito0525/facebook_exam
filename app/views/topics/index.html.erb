<div class="container">
  <div class="col-md-8 col-md-offset-2 col-xs-12 col-xs-offset-1">

    <p><%= notice %></p>
    <h1>トピックス一覧</h1>
      <%= link_to "topicsを作成する", new_topic_path, class: 'btn btn-default' %>
    <% @topics.each do |topic| %>
    <div class="panel panel-primary">
      <div class="panel-body">
      <%= link_to topic_path(topic)do %>
      <h4><strong><%= topic.title %></strong></h4>
      <% end %>
      <p><%= simple_format (topic.content) %></p>
        <div class="panel-body">
        <p><%= profile_img(topic.user) %></p>
        </div>
      </div>
      <p>投稿者ID:<%= topic.user.id if topic.user %></p>
      <p>投稿者:<%= topic.user.name if topic.user %></p>
      <% if current_user.id == topic.user_id %>
      <%= link_to "編集", edit_topic_path(topic.id), class: 'btn btn-default btn-sm btn-success' %>
      <%= link_to "削除", topic_path(topic.id), method: :delete, data: { confirm: '本当に削除していいですか？'}, class: 'btn btn-default btn-sm btn btn-danger' %>
        <br>
        <br>

      <% end %>
    </div>
    <% end %>
  </div>
</div>




<div id="page-topic-btn" class="page-topic-btn">
    <p><a class="move-page-top" id="move-page-top">▲</a></p>
</div>
